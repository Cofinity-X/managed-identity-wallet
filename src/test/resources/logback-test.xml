<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -%kvp- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Turning down the wiremock logging -->
    <logger name="com.github.tomakehurst" level="TRACE"/>
    <logger name="wiremock.org" level="TRACE"/>
    <logger name="WireMock" level="TRACE"/>
    <logger name="org.eclipse.tractusx" level="DEBUG">
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- wiremock has per endpoint servlet logging -->
    <logger name="/" level="WARN"/>
</configuration>